.mint-popup[data-popup='c-order-bill']
  width 100%
  height 100%
  background: rgba(0, 0, 0, 0.8)
  //   background: transparent
  color #fff

  .consumer
    width: 100%
    height: 100%

  h2
    font-size px2rem(34px)
    line-height @height
  .cost-list
    font-size px2rem(30px)
    dt
      border-bottom 1px solid #fff
      line-height px2rem(70px)
      margin px2rem(20px) 0 px2rem(10px) 0
      display flex
      span
        flex 1
        &.right
          text-align right
    dd
      display flex
      line-height px2rem(50px)
      span
        flex 1
        padding-left px2rem(57px)
        &.right
          text-align right
  .cost-txt
    margin 22px 0 27px
    text-align right
  .hotel-font-color2
    color #ff7d13

  .consumer-list
    width 100%
    padding px2rem(180px) px2rem(30px) 0 px2rem(30px)
    box-sizing border-box