.mint-popup[data-popup='c-ticket-notes']
    width: px2rem(690px)
    background-color: transparent
    display: block
    overflow: hidden
    border-radius: px2rem(24px)
  .container
    padding: 0.3rem 0.6rem
    box-sizing border-box
    // margin: @height * -0.5 auto auto @width * -0.5
    overflow: auto
    background-color: #fff
    .title
        height: 1.2rem
        line-height: @height
        font-size: px2rem(40px)
        text-align: center
        color: #000
        font-weight: 600
    .content
        min-height: px2rem(250px)
        overflow: auto
        line-height: px2rem(40px)
        font-size: px2rem(30px)