
    
$space-side = 0.4rem
$space-v = 0.3rem
$bg-color = #f3f3f3
$font-color = #333
$font-size = 0.4rem
$border-color = #e9e9e9
$c-color-blue = #009ff0

.keyword-page
    height:100%
    background:$bg-color
.keyword-header
    position: absolute
    left: 0
    top:0
    width: 100%
    height: 1.5rem
    line-height: @height
    padding: 0.3rem 0.4rem
    background-color: #fff
    border-bottom: 1px solid #ebebeb
    .search-wrapper
        position: relative
        padding-left: 0.75rem
        width: 100%
        height: 0.9rem
        line-height: @height
        color: $font-color
        font-size: 0.37rem
        background: $bg-color
        border-radius(0.1rem)

        // search icon
        &::before
            content: ''
            position: absolute
            left: 0
            top: 0
            width: 0.75rem
            height: 100%
            background: #f3f3f3 inline-url("images/commons/icon-search_1@2x.png") center no-repeat
            background-size(auto 1.1em)
        .text-input
            float: left
            display: block
            margin-top: @height * 0.15
            height: @height * 0.7
            line-height: @height
            width: 6rem
            border: none
            background: none
            padding: 0
        .buttons
            float: right
            height: 100%
            .btn-clean
                float: left
                width: 0.9rem
                height: 100%
                background: inline-url("images/commons/btn-close_3@2x.png") center no-repeat
                background-size(50%);
                border: none
                padding: 0
            .btn-confirm
                float: left
                display: block
                position: relative
                width: 1.3rem
                height: 100%
                line-height: inherit
                color: $c-color-blue
                font-size: 0.37rem
                text-align: center
                border: none
                background: none
                padding: 0
                &::before
                    content: ''
                    display: block
                    position: absolute
                    left: 0
                    top: 50%
                    width: 1px 
                    height: 1.2em
                    margin-top: @height * -0.5
                    background-color: #ebebeb

.keyword-main
    position:relative
    top:1.5rem
    #main-block
        .section
            margin-top: -1px
            padding: $space-side
            margin-bottom: $space-v
            background-color: #fff
            border: 1px solid #ebebeb
            border-width: 1px 0
            .head
                height: 0.55rem
                line-height: 0.55rem
                color: $font-color
                margin-bottom: 0.15rem
                .label
                    float: left
                    position: relative
                    line-height: inherit
                    &::before
                        content: ''
                        float: left
                        margin-right: 0.1rem
                        width: @height
                        height: @width
                        font-size: 0.4rem
                        border-radius: 2px
                .action-button
                    float: right
                    width: 1.4rem
                    height: 100%
                    line-height: inherit
                    color: $c-color-blue
                    text-align: right

            .list
                overflow: hidden
                border: 1px solid $border-color
                border-width: 1px 0 0 1px
                font-size: px2rem(24px)
                .item
                    float: left
                    box-sizing(border-box)
                    width: 25%
                    height: 1.15rem
                    padding: 0.1rem
                    border: 1px solid $border-color
                    border-width: 0 1px 1px 0
                    overflow: hidden
                    line-height: 1.3em
                    .overflow-wrap
                        overflow: hidden
                        height: 100%
                        width: 100%
                    .table-wrap
                        width: 100%
                        display: table
                        height: 100%
                        .content
                            display: table-cell
                            text-align: center
                            vertical-align: middle
                            line-height: 0.5rem

        .history .head .label::before
            background: #9ac0ff inline-url("images/commons/icon-search_2@2x.png") center no-repeat
            background-size(65%)


        .area
            .head .label::before
                background: #ffb5ab inline-url("images/commons/icon-shop-bag@2x.png") center no-repeat
                background-size(65%)

            .btn-collapse
                position: relative
                +x-arrow($c-color-blue, 0.3rem, up)
                    position: absolute
                    left: 50%
                    top: 50%
                    margin: -0.1rem 0 0 -0.2rem
                &.collpased
                    x-arrow($c-color-blue, 0.3rem, down)

    #search-result
        height: 100%    
        overflow: auto
        background: #fff

        .search-result-list .result-item
            border-bottom: 1px solid #ebebeb
            padding: 0 $space-side
            height: 1rem
            font-size: $font-size
            line-height: @height
            color: $font-color
            .text
                float: left
                width: 80%
                height: @height
                line-height: @height
                overflow(ellipsis)
            .label
                float: right
                width: 20%
                height: @height
                line-height: @height
                text-align: right
                color: #999
                overflow ellipsis
        .no-data
            height: 100%
            position: absolute
            display: block
            width: 100%
            margin: auto
            height: 4.5rem
            left: 0
            right: 0
            top: 0
            bottom: 0
            text-align: center
            color: #999
            &::before
                content: ''
                margin: 0 auto 0.2rem
                display: block
                width: 100%
                height: 3.4rem
                background: inline-url("images/commons/empty.png") center no-repeat
                background-size(auto 100%)


        
                

        